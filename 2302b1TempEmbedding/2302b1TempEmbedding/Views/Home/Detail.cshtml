@model _2302b1TempEmbedding.Models.Item

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cart = ViewBag.Cart as _2302b1TempEmbedding.Models.Cart;
    int userID = Convert.ToInt32(Context.Session.GetInt32("UserID"));
}


<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="about-img position-relative overflow-hidden p-5 pe-0">
                    <img class="img-fluid w-100" src="@Html.DisplayFor(model => model.Image)">
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <h1 class="display-5 mb-4">@Html.DisplayFor(model => model.Pname)</h1>
                <p class="mb-4">@Html.DisplayFor(model => model.Description)</p>
                <p><i class="fa fa-check text-primary me-3"></i>@Html.DisplayFor(model => model.Cat.CatName)</p>
                <p><i class="fa fa-check text-primary me-3"></i>Rs. @Html.DisplayFor(model => model.Price)</p>
               <form asp-action="AddtoCart">

                   <input type="hidden" asp-for="@cart.ItemId" value="@Model.Id"/>
                    <input type="hidden" asp-for="@cart.UserId" value="@userID" />
                    <input type="hidden" asp-for="@cart.Price"  value="@Model.Price" />
                   <input type="number" asp-for="@cart.Qty" value="1" min="1" max="20" placeholder="Please enter qty in KGs"/>
           
                    <button type="submit" class="btn btn-primary rounded-pill py-3 px-5 mt-3" >Add to cart</button>
               </form>
               
            </div>
        </div>
    </div>
</div>
<!-- About End -->






