@model _2302b1TempEmbedding.Models.Products

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>AddProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h1>@ViewBag.msg</h1>
